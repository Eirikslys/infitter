
<h1>Colors found!</h1>
<div class="color-picker">
    <div class="cards">
    <% @colors.each do |color| %>
      <div class="color-card btn" style="background-color: <%=color%>">
      <%= color %></div>
      <% end %>
    </div>
      <button class="hidden button-rectangle btn"> <%=  link_to "Wrong color. Pick again!", color_item_path(@item) %> </button>
      <button class="hidden button-rectangle btn"> Match this item with something in your wardrobe </button>
</div>
  <div class="guide-text">
    <p>Tap a color to select</p>
  </div>

