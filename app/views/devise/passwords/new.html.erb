<div class="title-box-password">
  <h2>Forgot your password?</h2>
</div>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs-password">
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
  </div>

  <div class="wrapper-button-newpassword">
    <button class="reset-password-button" type="submit">Send me reset password instructions</button>
  </div>
<% end %>

<div class="links-box-password">
  <%= render "devise/shared/links" %>
</div>
