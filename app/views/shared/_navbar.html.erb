<div class="navbar-infitter">
  <div class="nav-wrapper">
    <ul class="mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <!-- this conditonal makes sure the home button is not rendered if the user is
          currently on the home page -->
          <% if request.path != "/" %>
            <%= link_to "Home", root_path, class: "nav-link" %>
          <% end %>
          <%= link_to "My colors", items_path, class: "nav-link" %>
        </li>

        <li class="nav-item dropdown">
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </li>
      </ul>
      <% else %>
        <li class="nav-item">
            <%= link_to "Sign up", new_user_session_path, class: "nav-fontcolor" %>
        </li>
        <li class="nav-item">
          <%= link_to "My colors", new_user_session_path, class: "nav-fontcolor" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
